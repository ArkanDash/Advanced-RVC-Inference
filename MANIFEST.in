# MANIFEST.in - Include non-Python files in the package distribution
# This file is used by setuptools to determine which files to include

# Include Python source files
recursive-include advanced_rvc_inference *.py

# Include configuration files
include advanced_rvc_inference/configs/*.json
include advanced_rvc_inference/configs/v1/*.json
include advanced_rvc_inference/configs/v2/*.json
include advanced_rvc_inference/configs/pcph_gan/*.json
include advanced_rvc_inference/configs/ringformer_v2/*.json

# Include asset directories
recursive-include advanced_rvc_inference/assets *

# Include model files
include advanced_rvc_inference/assets/weights/**/*
include advanced_rvc_inference/assets/models/**/*

# Include preset files
include advanced_rvc_inference/assets/presets/**/*

# Include language files
include advanced_rvc_inference/assets/languages/**/*

# Include log files
include advanced_rvc_inference/assets/logs/**/*

# Include documentation
include README.md
include LICENSE
include CONTRIBUTING.md

# Exclude unnecessary files
exclude *.pyc
exclude *.pyo
exclude __pycache__
exclude .git
exclude .gitignore
exclude *.egg-info
exclude build
exclude dist
exclude *.log
exclude .DS_Store
