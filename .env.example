# Enhanced Advanced RVC Inference Environment Configuration
# Copy this file to .env and customize according to your needs

# =============================================================================
# APPLICATION SETTINGS
# =============================================================================

# Application Configuration
APP_NAME="Advanced RVC Inference"
APP_VERSION="3.2.0"
APP_DEBUG=false
APP_LOG_LEVEL=INFO

# =============================================================================
# SECURITY SETTINGS
# =============================================================================

# File size and duration limits (in MB and minutes)
MAX_FILE_SIZE_MB=500
MAX_AUDIO_DURATION_MINUTES=30

# Allowed file extensions (comma-separated)
ALLOWED_EXTENSIONS="wav,mp3,flac,ogg,m4a,aac,alac,wma"

# Security features
ENABLE_FILE_VALIDATION=true
ENABLE_AUDIT_LOGGING=true
ENABLE_PATH_VALIDATION=true

# =============================================================================
# PERFORMANCE SETTINGS
# =============================================================================

# CPU and GPU configuration
MAX_THREADS=4
ENABLE_GPU_ACCELERATION=true
MEMORY_LIMIT_GB=8

# Caching configuration
CACHE_SIZE_MB=1000
CACHE_TTL_HOURS=24
CLEANUP_INTERVAL_HOURS=1

# =============================================================================
# AUDIO PROCESSING
# =============================================================================

# Default audio settings
DEFAULT_SAMPLE_RATE=44100
DEFAULT_BIT_DEPTH=16
NORMALIZE_OUTPUT=true

# Audio processing features
ENABLE_NOISE_REDUCTION=true
ENABLE_REVERB_REMOVAL=true
ENABLE_ECHO_CANCELLATION=true
ENABLE_POST_PROCESSING=true

# =============================================================================
# VOICE CONVERSION
# =============================================================================

# Default RVC settings
DEFAULT_ALGORITHM="rmvpe"
ENABLE_AUTOTUNE=false
MAX_PITCH_SHIFT=12
DEFAULT_PROTECT_RATE=0.33

# Model management
MODELS_AUTO_DOWNLOAD=true
MODELS_VALIDATION_ENABLED=true
MAX_CONCURRENT_CONVERSIONS=2

# =============================================================================
# TEXT-TO-SPEECH
# =============================================================================

# TTS settings
DEFAULT_TTS_VOICE="en-US-JennyNeural"
MAX_TEXT_LENGTH=5000
ENABLE_VOICE_PREVIEW=true
TTS_CACHE_ENABLED=true

# =============================================================================
# USER INTERFACE
# =============================================================================

# UI preferences
UI_THEME="default"
UI_LANGUAGE="en_US"
SHOW_PROGRESS_BARS=true
SHOW_DETAILED_LOGS=false
AUTO_OPEN_BROWSER=true

# =============================================================================
# FILE PATHS
# =============================================================================

# Directory configuration
CACHE_DIR="./cache"
LOGS_DIR="./logs"
MODELS_DIR="./models"
TEMP_DIR="./temp"
AUDIO_FILES_DIR="./audio_files"
OUTPUT_DIR="./output"

# =============================================================================
# LOGGING CONFIGURATION
# =============================================================================

# Logging settings
ENABLE_FILE_LOGGING=true
ENABLE_CONSOLE_LOGGING=true
LOG_FILE_MAX_SIZE_MB=10
LOG_FILE_BACKUP_COUNT=5
STRUCTURED_LOGGING=true

# Log levels: DEBUG, INFO, WARNING, ERROR, CRITICAL
CONSOLE_LOG_LEVEL=INFO
FILE_LOG_LEVEL=INFO

# =============================================================================
# REALTIME PROCESSING
# =============================================================================

# Realtime voice changer
ENABLE_REALTIME=true
DEFAULT_CHUNK_SIZE_MS=100
ENABLE_VAD=true
DEFAULT_VAD_SENSITIVITY=3
MAX_REALTIME_BUFFER_SIZE=30

# Audio device settings
DEFAULT_INPUT_DEVICE=""
DEFAULT_OUTPUT_DEVICE=""
DEFAULT_MONITOR_DEVICE=""

# =============================================================================
# EXTERNAL SERVICES
# =============================================================================

# Discord RPC
DISCORD_RPC_ENABLED=false
DISCORD_CLIENT_ID=""

# Analytics and crash reporting
ANALYTICS_ENABLED=false
CRASH_REPORTING_ENABLED=false
SENTRY_DSN=""

# =============================================================================
# BACKUP AND RECOVERY
# =============================================================================

# Backup settings
ENABLE_AUTO_BACKUP=true
BACKUP_INTERVAL_HOURS=168
MAX_BACKUP_FILES=10
BACKUP_COMPRESSION=true
BACKUP_RETENTION_DAYS=30

# =============================================================================
# DEVELOPMENT SETTINGS
# =============================================================================

# Development and debugging
DEV_MODE=false
PROFILING_ENABLED=false
MEMORY_PROFILING=false
ENABLE_DEBUG_ENDPOINTS=false

# =============================================================================
# NETWORK AND SHARING
# =============================================================================

# Network configuration
SERVER_HOST="0.0.0.0"
SERVER_PORT=7860
ENABLE_PUBLIC_SHARING=false

# =============================================================================
# ADVANCED SETTINGS
# =============================================================================

# Advanced audio processing
ENABLE_ADVANCED_SEPARATION=true
MAX_SEPARATION_MODELS=10
ENABLE_BATCH_PROCESSING=false
BATCH_SIZE_LIMIT=5

# Quality settings
HIGH_QUALITY_MODE=false
ULTRA_PRECISION_MODE=false
ENABLE_AI_ENHANCEMENT=true

# Experimental features
ENABLE_EXPERIMENTAL_FEATURES=false
EXPERIMENTAL_MODELS_ENABLED=false

# =============================================================================
# PLATFORM SPECIFIC SETTINGS
# =============================================================================

# Windows specific
WINDOWS_ASIO_ENABLED=false
WINDOWS_WASAPI_EXCLUSIVE=false

# macOS specific
MACOS_SOUND_LIBRARY="coreaudio"
MACOS_ENABLE_HAL=true

# Linux specific
LINUX_PULSE_ENABLED=true
LINUX_JACK_ENABLED=true

# =============================================================================
# COMPLIANCE AND LEGAL
# =============================================================================

# Terms and compliance
DISCLAIMER_ACCEPTED=false
PRIVACY_POLICY_VERSION="1.0"
ENABLE_COMPLIANCE_CHECKS=true

# =============================================================================
# NOTES
# =============================================================================
# 
# 1. Boolean values should be set as true/false (not True/False or 1/0)
# 2. Numeric values should not be quoted
# 3. String values should be quoted
# 4. Paths can be relative or absolute
# 5. Comment lines start with #
# 6. This file can be overridden by command-line arguments
#
# For more information, see the documentation at:
# https://github.com/BF667/Advanced-RVC-Inference/wiki/Configuration